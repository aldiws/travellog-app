<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://use.fontawesome.com/05e7c788bc.js"></script>    
    <title>TravelLog</title>
</head>
<body>
    <div class="login_container">
        <div class="login_container_content">              
            <div class="logo_content_login">
                <div class="login_box_main">
                    <div class="loginPage_box_logo">
                        <h2 class="loginPage_box_logo_font">TravelLog</h2>
                    </div>
                    <form class="login_page_form" action="/" method="post">
                            <input class="login_input" type="text" placeholder="Username or email" name="login">
                            <input class="login_input" type="Password" placeholder="Password" name="password">
                            <button class="login_button">Login</button>
                            <div class="or_nest">
                                <div class="or_nest_line_left"></div>
                                <span class="or_nest_text">OR</span>
                                <div class="or_nest_line_right"></div>
                            </div>
                            <div class="forgot_password">
                                <span class="forgot_password_font">Forgot password?</span><br>                      
                            </div>
                        </form>  
                        
                        <% if (typeof flashMessage !== 'undefined') { %>
                            <div id="flash_login"> <%= flashMessage %></div>
                            <script>
                              $(function() {
                                $('#flash_login').delay(3000).fadeOut(1000);
                              });
                            </script>
                          <% } %>
                </div>
                
                <div class="login_box_bot">Dont't have any account?
                    <span class="login_box_bot_link">Sign up</span>
                </div>
            </div>

            <div class="logo_content_signup">
                <div class="signup_box_main">
                    <div class="loginPage_box_logo">
                        <h2 class="loginPage_box_logo_font">TravelLog</h2>
                    </div>
                    <form class="signup_page_form" action="/signup" method="post">
                        <input class="signup_input" type="text" placeholder="Username" name="username">
                        <input class="signup_input" type="text" placeholder="First name" name="first_name">
                        <input class="signup_input" type="text" placeholder="Last name" name="last_name">
                        <input class="signup_input" type="text" placeholder="Email" name="email">
                        <input class="signup_input" type="text" placeholder="Gender" name="gender">
                        <input class="signup_input" type="password" placeholder="Password" name="password">
                        <!-- <input type="submit" value="submit"> -->
                        <button class="signup_button">Sign Up</button>
                    </form>            
                </div>
                <% if (error) { %>
                    <div id="error" > <%= error.message %></div>                 
                    <script>
                        $(function() {
                          $('#error').delay(3000).fadeOut(1000);
                        });
                      </script>                          
                <% } %>                

                <div class="signup_box_bot">Already have an account?
                    <span class="signup_box_bot_link">Login</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $(".signup_box_bot_link").click(function(){
                $(".logo_content_signup").css("display","none")
                $(".logo_content_login").css('display','block')
            });

            $(".login_box_bot_link").click(function(){
                $(".logo_content_signup").css("display","block")
                $(".logo_content_login").css('display','none')
            });
        });
    
    </script>
</body>
</html>